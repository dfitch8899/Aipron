{
  "name": "aipron",
  "version": "1.1.0",
  "description": "AI-powered cooking assistant with real-time voice guidance",
  "private": true,
  "workspaces": [
    "mobile",
    "web",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev:mobile": "cd mobile && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "cd mobile && npm install && cd ../web && npm install && cd ../backend && npm install && cd ../shared && npm install"
  },
  "keywords": [
    "cooking",
    "ai",
    "recipe",
    "assistant",
    "realtime"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lucide-react": "^0.575.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "tailwindcss": "^4.2.1"
  }
}
